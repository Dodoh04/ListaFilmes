<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="#686666"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgFilme"
        android:layout_width="160dp"
        android:layout_height="210dp"
        android:layout_margin="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/apocalipse"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Apocalipse"
            android:textSize="25dp"
            android:textStyle="bold"
            android:id="@+id/tituloFilme"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/desc1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/descFilme"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Assista" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RatingBar

                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="1"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="20dp"
                android:id="@+id/acesso"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_add" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_share" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_favorite" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>